@model ErrorViewModel
@{
    ViewData["Title"] = "Oops!";
}

<div class="flex flex-col mt-6 items-center justify-center">
    <div class="bg-white rounded-lg shadow-md p-2 max-w-md text-center">
        <svg class="mx-auto h-8 w-8 text-red-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728"/>
        </svg>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Something went wrong</h1>
        <p class="text-gray-600 mb-6">We’re sorry, but we encountered an error processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p class="text-sm text-gray-500 mb-4">
                <span class="font-medium">Error ID:</span> <code class="bg-gray-100 px-2 py-1 rounded">@Model.RequestId</code>
            </p>
        }

        <p class="text-gray-700 mb-6">
            Please check your inputs and try again. If the problem persists, contact us:
        </p>
        <a href="mailto:support@example.com"
           class="inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
            support@example.com
        </a>

        <div class="mt-6">
            <a asp-controller="Home" asp-action="Index"
               class="text-blue-600 hover:underline">
                ← Return to homepage
            </a>
        </div>
    </div>
</div>
