@model FeedDetailViewModel

@{
    ViewData["Title"] = "Detail";
}

<div class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-6 text-center">Feed Detail</h1>
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
        <button class="w-40 inline-block px-4 py-2 bg-red-600 text-white font-semibold rounded-md hover:bg-red-700 transition-colors duration-200" onclick="openModal('@Model.FeedId', '@Model.Name')">
            Delete feed
        </button>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-4">
            <h2 class="text-2xl font-semibold text-gray-800">@Model.Name</h2>
            <h4 class="text-lg text-gray-600">Language: @Model.Language</h4>
            <h4 class="text-lg text-gray-600">
                Feed url: <a href="@Model.Url" class="text-indigo-600 hover:underline">@Model.Url</a>
            </h4>
        </div>
        <div class="mb-4">
            <p class="text-gray-700">Description: @Html.Raw(Model.Description)</p>
        </div>
        <div class="flex justify-center">
            <img src="@Model.ImageUrl" alt="Feed image" class="rounded-md shadow-lg max-w-full h-auto">
        </div>
    </div>
</div>

@await Html.PartialAsync("_DeleteModal")

@section Scripts {
    <script src="~/js/deleteModal.js"></script>
}